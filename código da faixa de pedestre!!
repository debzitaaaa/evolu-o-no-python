i = input('Você é um pedestre ou um motorista?')
if i!='pedestre' and i!='motorista':
    print('Digite uma resposta válida.')
elif i=='motorista':
    print('Cuidado com os pedestres em!')
elif i=='pedestre':
    x=input('Você está na faixa de pedestres? E o semáforo dos carros está vermelho? \nSe caso as duas respostas forem sim, digite "sim", caso contrário, digite "não". ')
    if x =='sim':
        print('Pode atravessar!')
    elif x == 'não':
        print('Aguarde mais um instante.')
    else:
        print('Digite uma resposta válida.')
